



<%= @project.name %>
<%= link_to "Edit", edit_project_path(@project) %> <%= link_to "Delete", @project , :method => :delete, :confirm => "are you sure"%>
<%= link_to "New Ticket", new_project_ticket_path(@project) %>

<ul id='tickets'>
  <% @project.tickets.each do |ticket| %>
      <li>
        <%= ticket.id %> - <%= link_to ticket.title, [@project, ticket] %>
      </li>
  <% end %>
</ul>